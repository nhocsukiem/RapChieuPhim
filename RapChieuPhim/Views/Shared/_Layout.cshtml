        a.bank-item {
            display: inline-block;
            width: 180px;
            height: 48px;
            padding: 10px;
            border-radius: 4px;
            border: 2px solid #f1f1f1;
            position: relative;
            vertical-align: top;
            margin-right: 10px;
            margin-bottom: 15px;
