    <script type="text/javascript">
        $('#loginForm').on('submit', function checkLogin(e) {
            e.preventDefault();

            var username = $('#usernamelogin').val();
            var password = $('#passwordlogin').val();
            $.ajax({
                url: '/TaiKhoan/Login',
                type: "POST",
                data: {
                    username: username,
                    password: password,
                },
                success: function (response) {
                    console.log(response);
                    if (response == "True") {
                        alert("Đăng nhập thành công!");
                        window.location.href = "/Home";
                    } else {
                        alert("Tài khoản hoặc mật khẩu không đúng vui lòng nhập lại!");
                    }
                }
            })
        });

    </script>
    <script type="text/javascript">
        $('#registerForm').on('submit', function checkLogin(e) {
            e.preventDefault();

            var username = $('#username-2').val();
            var email = $('#email-2').val();
            var password = $('#password-2').val();
            var repassword = $('#repassword-2').val();
            var diachi = $('#diachi-2').val();
            var gioitinh = $('#GioiTinh').val();
            var ngaysinh = $('#NgaySinh-2').val();
            if (repassword != password) {
                alert("Mật khẩu không hợp lệ!");

            } else {
                $.ajax({
                    url: '/TaiKhoan/Register',
                    type: "POST",
                    data: {
                        username: username,
                        password: password,
                        email: email,
                        ngaysinh: ngaysinh,
                        diachi: diachi,
                        gioitinh: gioitinh,
                    },
                    success: function (response) {
                            alert("Đăng ký tài khoảng thành công!");
                            window.location.href = "/Home";
                    }
                })
            }
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var modal = $('.modal');
            var btn = $('#checkSo');
            var span = $('.close');

            btn.click(function () {
                modal.show();
            });

            span.click(function () {
                modal.hide();
            });

            $(window).on('click', function (e) {
                if ($(e.target).is('.modal')) {
                    modal.hide();
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });


            $(".bank-item").click(function () {
                $(".bank-item").removeClass("selected");
                $(this).addClass("selected");
            });
        });
    </script>

